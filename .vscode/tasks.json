{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "args": [
                "--package=protosol-solana-api"
            ],
            "group": "build",
            "label": "cargo-build-backend",
            "detail": "Build the Protosol backend service",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "cargo", 
            "command": "run",
            "args": [
                "--package=protosol-solana-api"
            ],
            "group": "build",
            "label": "cargo-run-backend",
            "detail": "Run the Protosol backend service",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--package=protosol-solana-api"
            ],
            "group": "test",
            "label": "test-backend",
            "detail": "Run backend unit tests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests/go"
            },
            "group": "test",
            "label": "integration-tests",
            "detail": "Run Go integration tests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}