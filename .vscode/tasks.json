{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Go Integration Tests (Verbose)",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "-timeout", "300s"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/tests/go",
                "env": {
                    "RUN_INTEGRATION_TESTS": "1"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Run Specific Go Test (Verbose)",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "-timeout", "300s", "-run", "${input:testName}"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/tests/go",
                "env": {
                    "RUN_INTEGRATION_TESTS": "1"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Run Go Tests (Auto-detect services)",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "-timeout", "300s"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/tests/go"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$go"
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test name pattern (e.g., TestComposableE2ESuite/Test_06)",
            "default": "TestComposableE2ESuite",
            "type": "promptString"
        }
    ]
}